{% extends 'base.html.twig' %}

{% block body %}
    <h1>Список записей</h1>
    <table>
        <thead>
        <tr>
            <th>ID</th>
            <th>Текст</th>
            <th>Email</th>
            <th>Цвет</th>
            <th>Фигура</th>
            <th>Действия</th>
        </tr>
        </thead>
        <tbody>
        {% for entry in entries %}
            <tr>
                <td>{{ entry.id }}</td>
                <td>{{ entry.text }}</td>
                <td>{{ entry.email }}</td>
                <td>{{ entry.color }}</td>
                <td>{{ entry.shape }}</td>
                <td>
                    <a href="{{ path('admin_entry_view', { id: entry.id }) }}">Просмотреть</a>
                    <a href="{{ path('admin_entry_edit', { id: entry.id }) }}">Редактировать</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
